{
    "build": {
        "flags": "-g -O2 -Wall",
        "libs": "-lpthread",
        "ldLibs": "./xutils/build/lib/libxutils.a",
        "outputDir": "./obj",
        "overwrite": false,
        "name": "smake",
        "cxx": false,
        "verbose": 0,

        "includes": [
            "./src",
            "./xutils/build/include"
        ],

        "excludes": [
            "./xutils"
        ]
    },

    "install": {
        "binaryDir": "/usr/bin"
    }
}