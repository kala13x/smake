{
    "build": {
        "flags": "-O2 -Wall -Wextra -pedantic -I. -I./src/",
        "libs": " -lpthread -lm",
        "ldLibs": "./xutils/build/libxutils.a",
        "outputDir": "./obj",
        "overwrite": true,
        "name": "smake",
        "cxx": false,
        "verbose": 0,

        "includes": [
            "./xutils/src/",
            "./xutils/src/crypt/",
            "./xutils/src/data/",
            "./xutils/src/net/",
            "./xutils/src/sys/"
        ],

        "excludes": [
            "./xutils"
        ]
    },

    "install": {
        "binaryDir": "/usr/bin"
    }
}