{
    "build": {
        "flags": "-O2 -Wall -Wextra -pedantic -I. -I./xutils/src/ -I./xutils/src/crypt/ -I./xutils/src/data/ -I./xutils/src/net/ -I./xutils/src/sys/",
        "libs": " -lpthread -lm",
        "ldLibs": "./xutils/build/libxutils.a",
        "outputDir": "./obj",
        "overwrite": true,
        "name": "smake",
        "cxx": false,
        "verbose": 0,

        "includes": [
            "./src",
            "./xutils/build/include"
        ],

        "excludes": [
            "./xutils"
        ]
    },

    "install": {
        "binaryDir": "/usr/bin"
    }
}